{
  "private": true,
  "type": "module",
  "scripts": {
    "build": "run-s build:js build:css",
    "build:js": "run-s build:js:vite build:js:terser",
    "build:js:vite": "vite build .",
    "build:js:terser": "terser --config-file terser.json dist/main.js --output dist/main.js",
    "build:css": "cat ./src/main.css ./node_modules/notyf/notyf.min.css >./dist/main.css"
  },
  "dependencies": {
    "notyf": "^3.10.0",
    "npm-run-all2": "^8.0.4"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^12.3.0",
    "@tsconfig/recommended": "^1.0.11",
    "@types/chai": "^5.2.3",
    "@types/node": "^24.10.0",
    "rollup": "^4.52.5",
    "terser": "^5.44.0",
    "tslib": "^2.8.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vite": "^7.1.12"
  }
}
