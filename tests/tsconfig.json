{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["DOM", "ESNext"],
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": false,
    "noUncheckedIndexedAccess": false,
  },
  "exclude": [
    "node_modules",
    "test-report"
  ]
}
